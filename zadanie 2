#include <stdio.h>
#include <string.h>
int indexOf(char text[], char word[]) {
    int textLen = strlen(text);
    int wordLen = strlen(word);
    for (int i = 0; i <= textLen - wordLen; i++) {
        if (strncmp(&text[i], word, wordLen) == 0) {
            return i; // Возвращаем индекс, если нашли совпадение
        }
    }
    return -1; // Если не нашли, возвращаем -1
}
int main() {
    int num1 = 10, num2 = 20;
    printf("Максимальное число между %d и %d: %d\n", num1, num2, max(num1, num2));
    char text[] = "The cat is on the roof.";
    char word[] = "cat";
    int index = indexOf(text, word);
    if (index != -1) {
        printf("Слово "%s" найдено в строке "%s" на индексе %d.\n", word, text, index);
    } else {
        printf("Слово "%s" не найдено в строке "%s".\n", word, text);
    }

    return 0;
}
